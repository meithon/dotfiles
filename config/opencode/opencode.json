{
    "$schema": "https://opencode.ai/config.json",
    "plugin": [
        "oh-my-opencode",
        "opencode-openai-codex-auth"
    ],
    "permission": {
        "edit": "ask",
        "webfetch": "allow",
        "doom_loop": "ask",
        "external_directory": "allow",
        "bash": {
            "rm": "ask",
            "rm -rf": "deny",
            "rmdir": "ask",
            "mv": "ask",
            "git push --force": "deny",
            "git push -f": "deny",
            "git reset --hard": "ask",
            "git checkout --": "ask",
            "chmod": "ask",
            "chmod 777": "deny",
            "chown": "deny",
            "sudo": "deny",
            "dd": "deny",
            "mkfs": "deny",
            "kill": "ask",
            "pkill": "ask",
            "killall": "ask",
            "npm publish": "ask",
            "bun publish": "ask",
            "docker rm": "ask",
            "docker rmi": "ask",
            "brew uninstall": "ask",
            "gh repo delete": "deny",
            "gh release delete": "ask",
            "gh pr merge": "ask",
            "gh pr close": "ask",
            "gh issue close": "ask",
            "gh auth logout": "deny"
        }
    }
}
